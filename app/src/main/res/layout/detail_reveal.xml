<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cl_reveal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/btn_android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_android"
        android:textAllCaps="false"
        android:textSize="@dimen/sp_16"
        android:background="@drawable/bg_btn"
        android:foreground="?android:selectableItemBackground"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/btn_front"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_background"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/btn_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_background"
        android:textSize="@dimen/sp_16"
        android:textAllCaps="false"
        android:background="@drawable/bg_btn"
        android:textColor="@color/white"
        android:foreground="?android:selectableItemBackground"
        app:layout_constraintBottom_toTopOf="@+id/btn_bigData"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btn_android"/>

    <Button
        android:id="@+id/btn_front"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_front"
        android:textSize="@dimen/sp_16"
        android:background="@drawable/bg_btn"
        android:foreground="?android:selectableItemBackground"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_android"
        app:layout_constraintRight_toRightOf="@id/btn_android"
        app:layout_constraintLeft_toLeftOf="@id/btn_android"/>

    <Button
        android:id="@+id/btn_bigData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_bigData"
        android:textSize="@dimen/sp_16"
        android:background="@drawable/bg_btn"
        android:foreground="?android:selectableItemBackground"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_background"
        app:layout_constraintRight_toRightOf="@id/btn_background"
        app:layout_constraintLeft_toLeftOf="@id/btn_background"/>

</androidx.constraintlayout.widget.ConstraintLayout>